#include<iostream>
#include<set>
using namespace std;
int group[10000],id[10000];

int find_root(int x,int count);
int main(){
    int t,n,temp;
    cin>>t;
    while(t--){
        set<int> final_group;
        cin>>n;
        for(int i=0;i<n;i++){
            cin>>id[i];
            id[i]--;
            
        }
        for(int i=0;i<n;i++){
            temp=find_root(group[i],0);
            if(final_group.count(temp)==false){//若set內沒有temp，表示為
新的一組
                final_group.insert(temp);
            }
        }
        cout<<final_group.size()<<endl;
    }
    
}
int find_root(int x,int count){
    if(group[x]==x){
        return x;
    }
    if(count>x+1000){//若找不到源頭1000次，使group[x]=x;
        group[x]=x;
        return x;
    }
    int root=find_root(group[x],count+1);
    
    group[x]=root;
    return root;
};
